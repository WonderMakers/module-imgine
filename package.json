    "@babel/core": "^7.13.8",
    "@babel/preset-env": "^7.13.9",
    "babel-loader": "^8.2.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "chai": "^4.3.1",
    "core-js": "^3.9.1",
    "css-loader": "^5.1.1",
    "esm": "^3.2.25",
    "mini-css-extract-plugin": "^1.3.9",
    "mocha": "^8.3.0",
    "node-fetch": "^2.6.1",
    "node-loader": "^1.0.2",
    "node-sass": "^5.0.0",
    "sass-loader": "^11.0.1",
    "vue-loader": "^15.9.6",
